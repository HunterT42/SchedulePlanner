<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SchedulePlannerApp.AddTaskPage"
             Title="Добавить задачу">
    <VerticalStackLayout Padding="20">
        <!-- Заголовок -->
        <Label Text="Добавить новую задачу" FontSize="24" HorizontalOptions="Center" />

        <!-- Ввод имени задачи -->
        <Entry x:Name="TaskNameEntry" Placeholder="Название задачи" />

        <!-- Выбор даты -->
        <DatePicker x:Name="TaskDatePicker" Format="D" />

        <!-- Выбор времени -->
        <TimePicker x:Name="TaskTimePicker" Format="t" />

        <!-- Кнопка добавления задачи -->
        <Button Text="Добавить задачу" Clicked="OnAddTaskClicked" />
    </VerticalStackLayout>
</ContentPage>
