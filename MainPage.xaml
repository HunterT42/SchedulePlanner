<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SchedulePlannerApp.MainPage"
             Title="Планировщик задач">

    <!-- Основной стек для вертикального расположения элементов -->
    <VerticalStackLayout Padding="20">
        <!-- Заголовок -->
        <Label Text="Ваши задачи" 
               FontSize="24" 
               HorizontalOptions="Center" />

        <!-- Список задач -->
        <ListView x:Name="TaskListView" Margin="0,20">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid Padding="5" ColumnDefinitions="*, Auto" RowDefinitions="Auto">
                            <!-- Текст задачи -->
                            <StackLayout Grid.Column="0" VerticalOptions="CenterAndExpand">
                                <Label Text="{Binding Name}" 
                               FontSize="14"
                               LineBreakMode="WordWrap"
                               VerticalOptions="CenterAndExpand" 
                               HorizontalOptions="StartAndExpand" />
                                <Label Text="{Binding Time}" 
                               FontSize="16" 
                               TextColor="Gray"
                               VerticalOptions="CenterAndExpand" 
                               HorizontalOptions="StartAndExpand" />
                            </StackLayout>

                            <!-- Кнопка удаления -->
                            <ImageButton Grid.Column="1"
                                 Source="delete.png"
                                 CommandParameter="{Binding .}"
                                 Clicked="OnDeleteTaskClicked"
                                 HorizontalOptions="End"
                                 VerticalOptions="Center"
                                 WidthRequest="35" 
                                 HeightRequest="35" />
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>





        <!-- Кнопка добавления задачи -->
        <Button Text="Добавить задачу" 
                Clicked="OnAddTaskClicked" />
    </VerticalStackLayout>
</ContentPage>
