<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SchedulePlannerApp.MainPage"
             Title="Список задач">

    <ContentPage.Content>
        <VerticalStackLayout Padding="10" Spacing="10">

            <!-- Список задач -->
            <ListView x:Name="TaskListView"
                      ItemsSource="{Binding Tasks}"
                      HasUnevenRows="True"
                      SeparatorVisibility="Default"
                      BackgroundColor="White">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid Padding="10"
                                  WidthRequest="372"
                                  HeightRequest="80"
                                  ColumnSpacing="10"
                                  RowDefinitions="Auto, Auto, Auto">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!-- Название задачи -->
                                <Label Text="{Binding Name}"
                                       Grid.Column="0"
                                       Grid.Row="0"
                                       VerticalTextAlignment="Center"
                                       LineBreakMode="TailTruncation"
                                       FontSize="16"
                                       TextColor="Black" />

                                <!-- Время задачи -->
                                <Label Text="Указанное время:"
                                       Grid.Column="0"
                                       Grid.Row="1"
                                       FontSize="12"
                                       TextColor="Gray" />
                                <Label Text="{Binding Time}"
                                       Grid.Column="0"
                                       Grid.Row="1"
                                       FontSize="12"
                                       TextColor="Blue"
                                       Margin="110,0,0,0" />

                                <!-- Оставшееся время -->
                                <Label Text="Осталось:"
                                       Grid.Column="0"
                                       Grid.Row="2"
                                       FontSize="12"
                                       TextColor="Gray" />
                                <Label Text="{Binding TimeRemaining}"
                                       Grid.Column="0"
                                       Grid.Row="2"
                                       FontSize="12"
                                       TextColor="Red"
                                       Margin="70,0,0,0" />

                                <!-- Длительность выполнения -->
                                <Label Text="Длительность:"
                                       Grid.Column="0"
                                       Grid.Row="3"
                                       FontSize="12"
                                       TextColor="Gray" />
                                <Label Text="{Binding Duration}"
                                       Grid.Column="0"
                                       Grid.Row="3"
                                       FontSize="12"
                                       TextColor="Green"
                                       Margin="85,0,0,0" />

                                <!-- Кнопка выполнения -->
                                <ImageButton Source="checkmark.png"
                                             Grid.Column="1"
                                             Grid.RowSpan="4"
                                             CommandParameter="{Binding .}"
                                             Clicked="OnCompleteTaskClicked"
                                             WidthRequest="40"
                                             HeightRequest="40"
                                             BackgroundColor="Transparent"
                                             VerticalOptions="Center" />

                                <!-- Кнопка удаления -->
                                <ImageButton Source="delete.png"
                                             Grid.Column="2"
                                             Grid.RowSpan="4"
                                             CommandParameter="{Binding .}"
                                             Clicked="OnDeleteTaskClicked"
                                             WidthRequest="40"
                                             HeightRequest="40"
                                             BackgroundColor="Transparent"
                                             VerticalOptions="Center" />
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Кнопки управления -->
            <VerticalStackLayout Spacing="10" Padding="0,20,0,0">
                <Button Text="Добавить задачу"
                        Clicked="OnAddTaskClicked" />
                <Button Text="Выполненные задачи"
                        Clicked="OnViewCompletedTasksClicked" />
                <Button Text="Экспорт задач"
                        Clicked="OnExportTasksClicked" />
                <Button Text="Импорт задач"
                        Clicked="OnImportTasksClicked" />
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>
