<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SchedulePlannerApp.MainPage"
             Title="Планировщик задач">
    <VerticalStackLayout Padding="20">
        <!-- Заголовок -->
        <Label Text="Ваши задачи" FontSize="24" HorizontalOptions="Center" />

        <!-- Список задач -->
        <ListView x:Name="TaskListView" Margin="0,20">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid Padding="5" ColumnDefinitions="*, Auto, Auto, Auto" RowDefinitions="Auto">
                            <!-- Информация о задаче -->
                            <StackLayout Grid.Column="0" VerticalOptions="CenterAndExpand">
                                <Label Text="{Binding Name}" FontSize="14" VerticalOptions="CenterAndExpand" />
                                <Label Text="{Binding Time}" FontSize="16" TextColor="Gray" VerticalOptions="CenterAndExpand" />
                            </StackLayout>

                            <!-- Кнопка выполнения задачи -->
                            <ImageButton Grid.Column="1"
                                         Source="checkmark.png"  
                                         CommandParameter="{Binding .}"
                                         Clicked="OnCompleteTaskClicked"
                                         WidthRequest="35"
                                         HeightRequest="35" />

                            <!-- Кнопка удаления -->
                            <ImageButton Grid.Column="2"
                                         Source="delete.png"
                                         CommandParameter="{Binding .}"
                                         Clicked="OnDeleteTaskClicked"
                                         HorizontalOptions="End"
                                         VerticalOptions="Center"
                                         WidthRequest="35"
                                         HeightRequest="35" />
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Кнопка добавления задачи -->
        <Button Text="Добавить задачу" Clicked="OnAddTaskClicked" />

        <!-- Кнопка перехода к выполненным задачам -->
        <Button Text="Просмотр выполненных задач"
                Clicked="OnViewCompletedTasksClicked"
                Margin="0,10" />

        <!-- Кнопка экспорта задач -->
        <Button Text="Экспорт задач"
                Clicked="OnExportTasksClicked"
                Margin="0,10" />

        <!-- Кнопка импорта задач -->
        <Button Text="Импорт задач"
                Clicked="OnImportTasksClicked"
                Margin="0,10" />
    </VerticalStackLayout>
</ContentPage>
